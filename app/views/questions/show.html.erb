<p id="notice"><%= notice %></p>

<div class="tools">
  <%= link_to '修改', edit_question_path(@question), :class => "btn btn-small btn-success" %>
  <%= link_to '返回', questions_path, :class => "btn btn-small" %>
</div>
<div id="question">
  <p>
    <h3><%= @question.title %></h3>
  </p>
  <p>    
    <ul class="inline">
      tags: 
      <% @question.tags.each do |tag| -%>
        <li><%= tag %></li>
      <% end -%>
    </ul>
  </p>
  <p>
    <%= markdown @question.body %>
  </p>
</div>