var _id = '#<%= @answer.class.to_s.underscore %>-<%= @answer.id %>';

<% if @error -%>
  Util.alert('<%= @msg %>', _id + " > div:first")
<% else -%>
  $(_id).find(".edit-answer-form").hide();
  $(_id).find(".answer-content").html('<%= escape_javascript(markdown(@answer.body)) %>')
  Util.notice('<%= @msg %>', _id + " > div:first");
<% end -%>